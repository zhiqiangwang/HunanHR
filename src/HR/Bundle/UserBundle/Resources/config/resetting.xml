<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="user.form.type.resetting" class="HR\Bundle\UserBundle\FormType\ResettingFormType">
            <tag name="form.type" />
        </service>

        <service id="user.form.resetting" class="Symfony\Component\Form\FormFactory" factory-service="form.factory" factory-method="create">
            <argument type="service" id="user.form.type.resetting" />
        </service>
    </services>

</container>