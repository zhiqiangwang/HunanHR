<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="user.entity.class">HR\Bundle\UserBundle\Entity\User</parameter>
        <parameter key="user.manager.class">HR\Bundle\UserBundle\EntityManager\UserManager</parameter>
        <parameter key="user.provider.class">HR\Bundle\UserBundle\Security\UserProvider</parameter>

        <parameter key="position.entity.class">HR\Bundle\UserBundle\Entity\Position</parameter>
        <parameter key="position.manager.class">HR\Bundle\UserBundle\EntityManager\PositionManager</parameter>
    </parameters>

    <services>
        <service id="user.manager" class="%user.manager.class%">
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%user.entity.class%</argument>
        </service>

        <service id="position.manager" class="%position.manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%position.entity.class%</argument>
        </service>

        <service id="user.provider" class="%user.provider.class%">
            <argument type="service" id="user.manager" />
        </service>
    </services>
</container>