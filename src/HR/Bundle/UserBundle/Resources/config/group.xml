<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="user.group.class">HR\Bundle\UserBundle\Entity\Group</parameter>
        <parameter key="user.group_manager.class">HR\Bundle\UserBundle\EntityManager\GroupManager</parameter>
    </parameters>

    <services>
        <service id="user.group_manager" class="%user.group_manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%user.group.class%</argument>
        </service>
    </services>
</container>