{% extends 'HRUserBundle::layout.html.twig' %}

{% block user_content %}
    {% if error %}
        <div class="alert alert-warning">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path("login_check") }}" method="post" id="login" class="form-horizontal">
        <div class="form-group">
            <label for="username" class="control-label col-md-3">用户名或电子邮件地址</label>

            <div class="col-md-9">
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}"/>
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="control-label col-md-3">密码</label>

            <div class="col-md-9">
                <input type="password" id="password" name="_password" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-9 col-md-offset-3">
                <input type="checkbox" id="remember_me" name="_remember_me" checked="checked"/>
                <label for="remember_me">记住我的登录</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-9 col-md-offset-3">
                <button type="submit" class="btn btn-primary">
                    登录
                </button>
            </div>
        </div>
    </form>

    <hr />
    <p class="text-muted col-md-offset-3"><a href="{{ path('register') }}">还没有帐号？立即注册</a></p>
{% endblock %}