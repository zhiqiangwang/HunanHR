<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="skill.entity.class">HR\Bundle\SkillBundle\Entity\Skill</parameter>
        <parameter key="skill.manager.class">HR\Bundle\SkillBundle\EntityManager\SkillManager</parameter>
    </parameters>

    <services>
        <service id="skill.manager" class="%skill.manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%skill.entity.class%</argument>
        </service>
    </services>
</container>
