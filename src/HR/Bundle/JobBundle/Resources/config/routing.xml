<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="job_new" pattern="/job/new">
        <default key="_controller">HRJobBundle:Job:new</default>
    </route>

    <route id="job_show" pattern="/job/{jobId}">
        <default key="_controller">HRJobBundle:Job:show</default>
        <requirement key="jobId">\d+</requirement>
    </route>

    <route id="job_edit" pattern="/job/{jobId}/edit">
        <default key="_controller">HRJobBundle:Job:edit</default>
        <requirement key="jobId">\d+</requirement>
    </route>

    <route id="job_delete" pattern="/job/{jobId}/delete">
        <default key="_controller">HRJobBundle:Job:delete</default>
        <requirement key="jobId">\d+</requirement>
    </route>

    <route id="job_delivery" pattern="/job/{jobId}/delivery">
        <default key="_controller">HRJobBundle:Delivery:new</default>
        <requirement key="jobId">\d+</requirement>
    </route>
</routes>
