<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="job.entity.class">HRJobBundle:Job</parameter>
        <parameter key="job.manager.default.class">HR\JobBundle\EntityManager\JobManager</parameter>

        <parameter key="delivery.entity.class">HRJobBundle:Delivery</parameter>
        <parameter key="delivery.manager.class">HR\JobBundle\EntityManager\DeliveryManager</parameter>
    </parameters>

    <services>
        <service id="job.manager.default" class="%job.manager.default.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%job.entity.class%</argument>
        </service>

        <service id="delivery.manager" class="%delivery.manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%delivery.entity.class%</argument>
        </service>
    </services>

</container>