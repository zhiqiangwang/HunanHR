<div class="module">
    <div class="flex-module">
        {% set citySet = ['长沙', '常德', '株洲'] %}

        {% set query = app.request.get('q') %}

        <ul class="nav nav-pills item-filter">
            <li{% if query not in citySet or not query %} class="active"{% endif %}><a href="{{ path('home') }}">全部</a>
            </li>
            {% for city in citySet %}
                <li{% if query == city %} class="active"{% endif %}>
                    <a href="{{ path('position_search', {'q': city}) }}">{{ city }}</a></li>
            {% endfor %}
        </ul>

        <div class="item-search">
            <form class="form-inline" method="get" action="{{ path('position_search') }}">
                <div class="wrapper">
                    <div class="search-query">
                        <input type="text" class="form-control" name="q" id="query" size="65" value="{{ query }}" placeholder="搜索职位、企业、工作地点等，多个关键字用空格隔开。如：长沙 高级工程师">
                    </div>
                    <div class="search-btn">
                        <button type="submit" class="btn btn-default">
                            <span class="glyphicon glyphicon-search"></span> 搜索职位
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="search-recommend">
            <ul>
                <li><a href="{{ path('position_search', {'q': '销售'}) }}">销售</a></li>
                <li><a href="{{ path('position_search', {'q': '设计'}) }}">设计</a></li>
                <li><a href="{{ path('position_search', {'q': '策划'}) }}">策划</a></li>
                <li><a href="{{ path('position_search', {'q': '总监'}) }}">总监</a></li>
                <li><a href="{{ path('position_search', {'q': '工程师'}) }}">工程师</a></li>
                <li><a href="{{ path('position_search', {'q': 'PHP'}) }}">PHP</a></li>
                <li><a href="{{ path('position_search', {'q': 'Java'}) }}">Java</a></li>
                <li><a href="{{ path('position_search', {'q': '实习生'}) }}">实习生</a></li>
            </ul>
        </div>
    </div>
</div>